	<keywordlist style="datatype" flags="">
      <keyword>string</keyword>
      <keyword>int</keyword>
      <keyword>bool</keyword>
      <keyword>date</keyword>
      <keyword>color</keyword>
      <keyword>url</keyword>
      <keyword>real</keyword>
