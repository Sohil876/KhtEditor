	</keywordlist>

	<pattern style="special">[{}();:,.]</pattern>
	
	<pattern style="function">[-~^@/%|=+*!?&amp;&lt;&gt;]</pattern>
	
	<pattern style="function">(\[|\])</pattern>
	
	<pattern style="number">0[xX][a-fA-F0-9]+</pattern>
	
	<pattern style="number">0|[\+-]?[1-9][0-9]*</pattern>
	
	<pattern style="number">[\+-]?(0|[1-9][0-9]*)?\.[0-9]+([Ee][\+-]?[1-9][0-9]*)?</pattern>
	
